@model ContactPage.Models.Employee

@{ 
    ViewData["Titel"] = "Добавление \\ Редактирование";
}

<h1>Просмотр контакта</h1>

<h4>Добавление | Редактирование | Просмотр формы контакта</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="EmployeeId" />

            <div class="container overflow-hidden">
                <div class="form-row gy-1">
                    <div class="form-group col-md-4">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="container overflow-hidden">
                <div class="form-row gy-4">
                    <div class="form-group col-md-4">
                        <label asp-for="Phone" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">+7</span>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Mail" class="control-label"></label>
                        <input asp-for="Mail" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4"></div>
                </div>
            </div>

            <div class="container overflow-hidden">
                <div class="form-row gy-4">
                    <div class="form-group col-md-5">
                        <label asp-for="Company" class="control-label"></label>
                        <input asp-for="Company" class="form-control" />
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="FieldOfActivity" class="control-label"></label>
                        <input asp-for="FieldOfActivity" class="form-control" />
                        <span asp-validation-for="FieldOfActivity" class="text-danger"></span>
                    </div>
                </div>
            </div>

                <div class="form-group col-sm-10">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group col-sm-10">
                    <label asp-for="CompletedProjects" class="control-label"></label>
                    <textarea asp-for="CompletedProjects" class="form-control"></textarea>
                    <span asp-validation-for="CompletedProjects" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-10">
                        <input type="submit" value="Применить" class="btn btn-primary btn-lg btn-block" />
                    </div>
                    <div class="form-group col-sm-10">
                        <a asp-action="Index" class="btn btn-secondary btn-lg btn-block"><i class="fa fa-table"></i>Назад</a>
                    </div>
                </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}